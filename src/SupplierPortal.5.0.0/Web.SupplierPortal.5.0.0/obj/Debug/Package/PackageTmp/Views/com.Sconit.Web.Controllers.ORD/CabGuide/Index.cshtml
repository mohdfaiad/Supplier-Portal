@{
    ViewBag.Title = "";
    Html.RenderAction("_SiteMapPath", "Common", new { MenuContent = "Url_CabProductionView_View" });
}
@{ Html.Telerik().TabStrip()
        .Name("CabProductionViewTabStrip")
        .Items(tabstrip =>
        {
            tabstrip.Add()
                .Text("自制")
                .LoadContentFrom("_GuideViewIndex", "CabProductionView")
                .HtmlAttributes(new { onclick = "CleanTabMessage()" });

            tabstrip.Add()
               .Text("外购")
                .LoadContentFrom("_OutSoureIndex", "CabProductionView")
                .HtmlAttributes(new { onclick = "CleanTabMessage()" });

        })
        .Render();
}
@{ Html.Telerik().ScriptRegistrar()
        .OnDocumentReady(
    @<text> var tabIndex = "@TempData["TabIndex"]"; var tabstrip = $("#CabProductionViewTabStrip").data("tTabStrip");
    var item = $("li", tabstrip.element)[tabIndex != "" ? tabIndex : 0]; tabstrip.select(item);
    </text>
        );
}
