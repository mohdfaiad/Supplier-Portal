<script type="text/javascript">
    function Region_Change(e) {
        $('#Location').data('tComboBox').value('');
        $('#Location').data('tComboBox').text('');
        $("#Location").data("tComboBox").reload();
    }

    function Location_DataBinding(e) {
        e.data = {
            region: $("#Region").val()
        };
    }

    function onSuccess(e) {
        TelerikonUpload_OnSuccess(e);
        var data = {
            "MiscOrderNo": $("#MiscOrderNo").val(),
            "MoveType": $("#MoveType").val(),
            "Status": $("#Status").val()
        }
        var url = "";
        if ($("#IsScanHu").val() == "True") {
            url = "@Url.Content("~/InMiscOrder/_MiscOrderDetailIsScanHu/")";
        }
        else {
            url = "@Url.Content("~/InMiscOrder/_MiscOrderDetailNoScanHu/")";
        }
        $.ajax({
            type: "get",
            dataType: "html",
            url: url,
            cache: false,
            data: data,
            success: function (data, textStatus) {
                var $tGrid = $("#divInMiscOrderDetailList");
                $($tGrid).html(data);
            }
        });
    }
    function onUpload(e) {
        e.data = { MiscOrderNo: $("#MiscOrderNo").val()
        };

    }

    function OrderMasterPartyFrom(e) {
        if (e.value != "") {
            var combobox = $(this).data("tComboBox");
            if (combobox.selectedIndex == undefined || combobox.selectedIndex == -1) {
                combobox.value("");
                combobox.reload();
            }
        }
    }
</script>
