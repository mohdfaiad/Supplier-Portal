@using com.Sconit.Web.Models.SearchModels.SCM
@{
    Layout = null;
}
<fieldset>
    @using (Html.BeginForm("FlowDetailList", "ProcurementFlow", new { isFromList = false }))
    {   
        <div class="search">
            <div class="search-label">
                <label for="OrderMaster_Flow">
                    @Resources.ORD.OrderMaster.OrderMaster_Flow
                </label>
            </div>
            <div class="search-field">
                @{
        Html.RenderAction("_FlowComboBox", "Common",
            new
            {
                controlName = "Flow",
                type = (int)com.Sconit.CodeMaster.OrderType.Procurement,
                selectedValue = TempData["FlowDetailSearchModel"] != null ? ((FlowDetailSearchModel)TempData["FlowDetailSearchModel"]).Flow : string.Empty
            });
                }
            </div>
           @* <div class="search-label">
                <label for="OrderMaster_Flow">
                    @Resources.ORD.OrderMaster.OrderMaster_PartyFrom_Supplier
                </label>
            </div>
            <div class="search-field">
                @{
        Html.RenderAction("_OrderMasterPartyFromComboBox", "Common",
            new
            {
                controlName = "ManufactureParty",
                orderType = (int)com.Sconit.CodeMaster.OrderType.Procurement,
                selectedValue = TempData["FlowDetailSearchModel"] != null ? ((FlowDetailSearchModel)TempData["FlowDetailSearchModel"]).ManufactureParty : string.Empty
            });
                }
            </div>*@
            <div class="search-label">
                <label for="Item_Code">
                    @Resources.SCM.FlowDetail.FlowDetail_Item
                </label>
            </div>
            <div class="search-field">
                 @{
                        Html.RenderAction("_ItemComboBox", "Common", new
                     {
                         controlName = "Item",
                         selectedValue = TempData["FlowDetailSearchModel"] != null ? ((FlowDetailSearchModel)TempData["FlowDetailSearchModel"]).Item : null
                     });
                    }
            </div>
            <div class="search-label">
                <label for="Item_Description">
                    @Resources.SCM.FlowDetail.FlowDetail_ReferenceItemCode
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("ReferenceItemCode", TempData["FlowDetailSearchModel"] != null ? ((FlowDetailSearchModel)TempData["FlowDetailSearchModel"]).ReferenceItemCode : string.Empty)
            </div>
            <div class="search-label">
                <label for="FlowMaster_IsActive">
                    @Resources.SCM.FlowMaster.FlowMaster_IsActive
                </label>
            </div>
            <div class="search-field">
                @Html.CheckBox("IsActive", TempData["FlowDetailSearchModel"] != null ? ((FlowDetailSearchModel)TempData["FlowDetailSearchModel"]).IsActive : true)
            </div>
        </div>
        <div class="search-footer">
            @Html.Hidden("isFromList", true)
            <button type="submit" id="btnSearch">
                @Resources.Global.Button_Search</button>
        </div>

    }
</fieldset>
