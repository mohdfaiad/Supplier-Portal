@using com.Sconit.Entity.ORD
@using com.Sconit.Entity.SYS
@using com.Sconit.Web.Models.SearchModels.ORD
<fieldset>
    @using (Html.BeginForm("List", "PickResult"))
    {   
        <div class="search">
            <div class="search-label">
                <label for="PickTask_PickId">
                    @Resources.ORD.PickTask.PickTask_PickId
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("PickId", TempData["PickTaskSearchModel"] != null ? ((PickTaskSearchModel)TempData["PickTaskSearchModel"]).PickId : string.Empty) 
            </div>
        </div>
        <div class="search-footer">
         @Html.Hidden("isFromList", true)
            <button type="submit" id="btnSearch">
                @Resources.Global.Button_Search</button>
        </div>

    }
</fieldset>
