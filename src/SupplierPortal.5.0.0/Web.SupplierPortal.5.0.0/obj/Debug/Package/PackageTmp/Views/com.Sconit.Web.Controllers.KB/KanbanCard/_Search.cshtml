@using com.Sconit.Web.Models.SearchModels.KB
<script src="@Url.Content("~/Scripts/jquery.ui.core.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.ui.widget.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.multiselect.js")" type="text/javascript"></script>
<link href="@Url.Content("~/Content/jqueryui/jquery-ui.min.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/jqueryui/jquery.multiselect.css")" rel="stylesheet" type="text/css" />
<fieldset>
    @using (Html.BeginForm("List", "KanbanCard"))
    {   
        <div class="search">
            <div class="search-label">
                <label>
                    @Resources.KB.KanbanCard.KanbanCard_OpRefSequence
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("OpRefSequence", TempData["KanbanCardSearchModel"] != null ? ((KanbanCardSearchModel)TempData["KanbanCardSearchModel"]).OpRefSequence : string.Empty)
            </div>
            <div class="search-label">
                <label>
                    @Resources.KB.KanbanCard.KanbanCard_CardNo
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("CardNo", TempData["KanbanCardSearchModel"] != null ? ((KanbanCardSearchModel)TempData["KanbanCardSearchModel"]).CardNo : string.Empty)
            </div>
            
            <div class="search-label">
                <label>
                    @Resources.KB.KanbanCard.KanbanCard_Supplier
                </label>
            </div>
            <div class="search-field">
                @* @{
           Html.RenderAction("_OrderMasterPartyFromComboBox", "Common",
               new
               {
                   controlName = "PartyFrom",
                   orderType = (int)com.Sconit.CodeMaster.OrderType.Procurement

               });
            }*@
             @{
                    Html.RenderAction("_RegionComboBox", "Common",
                    new
                    {
                        controlName = "Supplier",
                        selectedValue = TempData["KanbanCardSearchModel"] != null ? ((KanbanCardSearchModel)TempData["KanbanCardSearchModel"]).Supplier : string.Empty
                    });
                }
            </div>
            <div class="search-label">
                <label>
                    @Resources.KB.KanbanCard.KanbanCard_Region
                </label>
            </div>
            <div class="search-field">
                @{
                    Html.RenderAction("_RegionComboBox", "Common",
                    new
                    {
                        controlName = "Region",
                        selectedValue = TempData["KanbanCardSearchModel"] != null ? ((KanbanCardSearchModel)TempData["KanbanCardSearchModel"]).Region : string.Empty
                    });
                }
               
            </div>
            <div class="search-label">
                <label>
                    @Resources.KB.KanbanCard.KanbanCard_BinTo
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("BinTo", TempData["KanbanCardSearchModel"] != null ? ((KanbanCardSearchModel)TempData["KanbanCardSearchModel"]).BinTo : string.Empty)
            </div>
            <div class="search-label">
                <label for="FlowMaster_FirstName">
                    @Resources.KB.KanbanCard.KanbanCard_Item
                </label>
            </div>
            <div class="search-field">
                @{
                    Html.RenderAction("_ItemComboBox", "Common", new
                    {
                        controlName = "Item",
                        selectedValue = TempData["KanbanCardSearchModel"] != null ? ((KanbanCardSearchModel)TempData["KanbanCardSearchModel"]).Item : string.Empty
                    });
                }
            </div>
            <div class="search-label">
                <label>
                    @Resources.INV.LocationTransaction.LocationTransaction_StartDate
                </label>
            </div>
            <div class="search-field">
                @(Html.Telerik().DateTimePicker().Format(com.Sconit.Entity.BusinessConstants.LONG_DATE_FORMAT).Format("yyyy-MM-dd HH:mm").Name("StartDate")
            .Value(TempData["KanbanCardSearchModel"] != null ? ((KanbanCardSearchModel)TempData["KanbanCardSearchModel"]).StartDate : null)
                .HtmlAttributes(new { style = "margin-bottom: 1.3em;width:200px" }))
            </div>
            <div class="search-label">
                <label>
                    @Resources.INV.LocationTransaction.LocationTransaction_EndDate
                </label>
            </div>
            <div class="search-field">
                @(Html.Telerik().DateTimePicker().Format(com.Sconit.Entity.BusinessConstants.LONG_DATE_FORMAT).Format("yyyy-MM-dd HH:mm").Name("EndDate")
.Value(TempData["KanbanCardSearchModel"] != null ? ((KanbanCardSearchModel)TempData["KanbanCardSearchModel"]).EndDate : null)
                .HtmlAttributes(new { style = "margin-bottom: 1.3em;width:200px" }))
            </div>


        </div>
        <div class="search-footer">
            @Html.Hidden("isFromList", true)
            <button type="submit" id="btnSearch">
                @Resources.Global.Button_Search</button>
            <button type="button" id="btnPrint" onclick="CheckedPrint()" style="display: none">
                @Resources.Global.Button_Print</button>
        </div>

    }
</fieldset>

