@using com.Sconit.Web.Models.SearchModels.ORD
<fieldset>
    @using (Html.BeginForm("DetailList", "TyreOrder"))
    {   

        <div class="search">
            <div class="editor-label-2">
                <label for="">
                    @Resources.ORD.TyreOrderDetail.TyreOrderDetail_ProdLine
                </label>
            </div>
            <div class="editor-field-2">
                @{
        Html.RenderAction("_FlowComboBox", "Common",
                       new
                       {
                           controlName = "ProdLine",
                           type = (int)com.Sconit.CodeMaster.OrderType.Production,
                           isVanOrder = true,
                           selectedValue = TempData["TyreOrderSearchModel"] != null ? ((TyreOrderSearchModel)TempData["TyreOrderSearchModel"]).ProdLine : string.Empty
                       });
 }
            </div>
            <div class="search-label">
                <label for="">
                    @Resources.ORD.TyreOrderDetail.TyreOrderDetail_Flow
                </label>
            </div>
            <div class="search-field">
                @{
        Html.RenderAction("_FlowComboBox", "Common",
                new
                {
                    controlName = "Flow",
                    type = (int)com.Sconit.CodeMaster.OrderType.Transfer,
                    selectedValue = TempData["TyreOrderSearchModel"] != null ? ((TyreOrderSearchModel)TempData["TyreOrderSearchModel"]).Flow : string.Empty
                });
 }
            </div>
            <div class="editor-label-2">
                <label for="">
                    @Resources.ORD.TyreOrderDetail.TyreOrderDetail_ProdNo
                </label>
            </div>
            <div class="editor-field-2">
                @Html.TextBox("ProdNo", TempData["TyreOrderSearchModel"] != null ? ((TyreOrderSearchModel)TempData["TyreOrderSearchModel"]).ProdNo : string.Empty)
            </div>
            <div class="search-label">
                <label for="">
                    @Resources.ORD.TyreOrderDetail.TyreOrderDetail_RefOrderNo
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("RefOrderNo", TempData["TyreOrderSearchModel"] != null ? ((TyreOrderSearchModel)TempData["TyreOrderSearchModel"]).RefOrderNo : string.Empty)
            </div>
            <div class="search-label">
                <label for="">
                    @Resources.ORD.TyreOrderDetail.TyreOrderDetail_VanNo
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("VanNo", TempData["TyreOrderSearchModel"] != null ? ((TyreOrderSearchModel)TempData["TyreOrderSearchModel"]).VanNo : string.Empty)
            </div>
            <div class="editor-label-2">
                <label for="">
                    @Resources.ORD.TyreOrderDetail.TyreOrderDetail_SeqGroup
                </label>
            </div>
            <div class="editor-field-2">
                @Html.TextBox("SeqGroup", TempData["TyreOrderSearchModel"] != null ? ((TyreOrderSearchModel)TempData["TyreOrderSearchModel"]).SeqGroup : string.Empty)
            </div>
            <div class="search-label">
                <label for="">
                    @Resources.ORD.TyreOrderDetail.TyreOrderDetail_OrderNo
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("TyreOrderNo", TempData["TyreOrderSearchModel"] != null ? ((TyreOrderSearchModel)TempData["TyreOrderSearchModel"]).TyreOrderNo : string.Empty)
            </div>
            <div class="editor-label-2">
                <label for="">
                    @Resources.ORD.TyreOrderDetail.TyreOrderDetail_Item
                </label>
            </div>
            <div class="editor-field-2">
                @{
        Html.RenderAction("_ItemComboBox", "Common",
            new
            {
                controlName = "Item",
                selectedValue = TempData["TyreOrderSearchModel"] != null ? ((TyreOrderSearchModel)TempData["TyreOrderSearchModel"]).Item : string.Empty
            });
                    
 }
            </div>
            <div class="search-label">
                <label for="OrderMaster_DateFrom">
                    @Resources.ORD.OrderMaster.OrderMaster_DateFrom
                </label>
            </div>
            <div class="search-field">
                @(Html.Telerik().DateTimePicker()
            .Format(com.Sconit.Entity.BusinessConstants.LONG_DATE_FORMAT)
            .Name("CreateDateFrom")
 .Value(TempData["TyreOrderSearchModel"] != null ? ((TyreOrderSearchModel)TempData["TyreOrderSearchModel"]).CreateDateFrom : null)
                .HtmlAttributes(new { style = "margin-bottom: 1.3em;width:200px" }))
            </div>
            <div class="search-label">
                <label for="OrderMaster_DateTo">
                    @Resources.ORD.OrderMaster.OrderMaster_DateTo
                </label>
            </div>
            <div class="search-field">
                @(Html.Telerik().DateTimePicker()
        .Format(com.Sconit.Entity.BusinessConstants.LONG_DATE_FORMAT)
            .Name("CreateDateTo")
         .Value(TempData["TyreOrderSearchModel"] != null ? ((TyreOrderSearchModel)TempData["TyreOrderSearchModel"]).CreateDateTo : null)
                .HtmlAttributes(new { style = "margin-bottom: 1.3em;width:200px" }))
            </div>
        </div>

        <div class="search-footer">
            @Html.Hidden("isFromList", true)
            <button type="submit" id="btnSearch">
                @Resources.Global.Button_Search</button>
        </div>

    }
</fieldset>
<script type="text/javascript">

    function ExportClick() {
        location.href = "@Url.Content("~/LocationDetailPref/ExportXls/?LocationCode=")" + $('#LocationCode').val() + "&ItemCode=" + $('#ItemCode').val();
    }
</script>
