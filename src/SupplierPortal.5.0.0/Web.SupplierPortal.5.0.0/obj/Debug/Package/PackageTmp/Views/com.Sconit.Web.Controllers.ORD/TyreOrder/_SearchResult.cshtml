@model IEnumerable<com.Sconit.Entity.ORD.TyreOrderMaster>
         
<fieldset>
    @(Html.Telerik().Grid(Model)
        .Name("OrderMasterGrid")
        .DataKeys(keys =>
        {
            keys.Add(p => p.TyreOrderNo);
        })
        .Columns(columns =>
        {
            columns.Bound(o => o.TyreOrderNo);
            columns.Bound(o => o.LastModifyDate);
            columns.Bound(o => o.LastModifyUserName);
        })
            .DetailView(details => details.ClientTemplate(
            Html.Telerik().Grid<com.Sconit.Entity.ORD.TyreOrderDetail>()
                                    .Name("TyreOrderDetail_<#= TyreOrderNo #>")
            .Columns(columns =>
            {
                columns.Bound(o => o.Id).Hidden();
                columns.Bound(o => o.ProdLine);
                columns.Bound(o => o.ProdNo);
                columns.Bound(o => o.Flow);
                columns.Bound(o => o.RefOrderNo);
                columns.Bound(o => o.SeqGroup);
                columns.Bound(o => o.VanNo);
                columns.Bound(o => o.Item);
                columns.Bound(o => o.ItemDescription);
                columns.Bound(o => o.Uom);
                columns.Bound(o => o.UnitCount);
                columns.Bound(o => o.OrderedQty);
                columns.Bound(o => o.ShippedQty);
                columns.Bound(o => o.ReceivedQty);
                columns.Bound(o => o.CompleteDate);
                columns.Bound(o => o.LastModifyDate);
            })
            .DataBinding(dataBinding => dataBinding.Ajax()
                                    .Select("_AjaxOrderDetail", "TyreOrder", new { tyreOrderNo = "<#= TyreOrderNo #>" }))
                    .ClientEvents(events => events.OnDataBinding("OrderDetailGrid_OnDataBinding"))
            .Footer(false)
            .Resizable(resizing => resizing.Columns(true))
            .ToHtmlString()
            ))
        .Scrollable(c => c.Enabled(false))
        .EnableCustomBinding(true)
                .DataBinding(dataBinding => dataBinding.Ajax().Select("_AjaxList", "TyreOrder"))
                .ClientEvents(events => events.OnDataBinding("OrderMasterGrid_OnDataBinding"))
        .Pageable(settings =>
        {
            settings.Total(ViewBag.Total == null ? 0 : ViewBag.Total);
            settings.PageSize(ViewBag.PageSize);
        })
        .Sortable()
        .Resizable(resizing => resizing.Columns(true))
    )
  
    <script type="text/javascript">
        function OrderDetailGrid_OnDataBinding(e) {
            $(e.target).find("tbody").find("tr").children().html("正在查询,请稍等…");
        }

        function OrderMasterGrid_OnDataBinding(e) {
            e.data = {
                ProdLine: $('#ProdLine').val(),
                Flow: $('#Flow').val(),
                CreateDateFrom: $('#CreateDateFrom').val(),
                CreateDateTo: $('#CreateDateTo').val()
            };
        } 
    </script>
</fieldset>
