@using com.Sconit.Web.Models.SearchModels.INV
@model System.Web.Mvc.SelectList
<fieldset id="filterDiv">
    @using (Html.BeginForm("List", "SupplierPrintHu"))
    {   
        <div class="search">
            <div class="search-label">
                <label for="Hu_HuId">
                    @Resources.INV.Hu.Hu_HuId
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("HuId", TempData["HuSearchModel"] != null ? ((HuSearchModel)TempData["HuSearchModel"]).HuId : string.Empty)
            </div>
            <div class="search-label">
                <label for="Hu_Item">
                    @Resources.INV.Hu.Hu_Item
                </label>
            </div>
            <div class="search-field">
              
               @{
                   Html.RenderAction("_ItemComboBox", "Common", 
                       new { controlName = "Item",
                             selectedValue = TempData["HuSearchModel"] != null ? ((HuSearchModel)TempData["HuSearchModel"]).Item : string.Empty
                       });
                    
                }
               

               @* @Html.TextBox("Item", TempData["HuSearchModel"] != null ? ((HuSearchModel)TempData["HuSearchModel"]).Item : string.Empty)*@
            </div>
            <div class="search-label">
                <label for="Hu_StartDate">
                    @Resources.INV.Hu.Hu_lotNo
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("lotNo", TempData["HuSearchModel"] != null ? ((HuSearchModel)TempData["HuSearchModel"]).lotNo : string.Empty)
            </div>
            <div class="search-label">
            <label>
             @Resources.INV.Hu.Hu_ManufactureParty
             </label>
            </div>
            <div class="search-field">
           @{
        Html.RenderAction("_SupplierComboBox", "Common",
            new {
                controlName = "ManufactureParty",
                selectedValue = TempData["HuSearchModel"] != null ? ((HuSearchModel)TempData["HuSearchModel"]).ManufactureParty : string.Empty
            });
                }
            
            </div>
             <div class="search-label">
                <label for="Hu_StartDate">
                    @Resources.INV.Hu.Hu_StartDate
                </label>
            </div>
            <div class="search-field">
                @(Html.Telerik().DatePicker().Format("yyyy-MM-dd ").Name("StartDate")
.Value(TempData["HuSearchModel"] != null ? ((HuSearchModel)TempData["HuSearchModel"]).StartDate : System.DateTime.Today)
                .HtmlAttributes(new { style = "margin-bottom: 1.3em;width:200px" }))
            </div>
            <div class="search-label">
                <label for="ProductLineLocationDetail_EndDate">
                    @Resources.INV.Hu.Hu_EndDate
                </label>
            </div>
            <div class="search-field">
                @(Html.Telerik().DatePicker().Format("yyyy-MM-dd ").Name("EndDate")
.Value(TempData["HuSearchModel"] != null ? ((HuSearchModel)TempData["HuSearchModel"]).EndDate : System.DateTime.Today.AddDays(1))
                .HtmlAttributes(new { style = "margin-bottom: 1.3em;width:200px" }))
            </div>
          
        </div>
        <div class="search-footer">
            @Html.Hidden("isFromList", true)
            <button type="submit" id="btnSearch">
                @Resources.Global.Button_Search</button>
            <button type="button" id="btnEdit" onclick="CheckedExport(false)"  style="display: none">@Resources.Global.Button_Print</button>
            <button type="button" id="btnExport" onclick="CheckedExport(true)"  style="display: none">@Resources.Global.Button_Export</button>
        </div>

    }
</fieldset>
