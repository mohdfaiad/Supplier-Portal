@using com.Sconit.Entity.ACC
@using com.Sconit.Web.Models.SearchModels.ORD
<fieldset>
    <script type="text/javascript">
       

        function doSearch() {
            $("#errorsul").html("");
            $("#successesul").html('');
            var data = {
                OrderNo: $("#OrderNo").val(),
                WmsPickNo: $("#WmsPickNo").val(),
                Supplier:$("#Supplier").val(),
                Location:$("#Location").val(),
                Item :$("#Item").val(),
                WmsNo:$("#WmsNo").val(),
                HandResult:$("#HandResult").val(),
                MoveType:$("#MoveType").val(),
                IsCs:$("#IsCs").val(),
                StartDate:$("#StartDate").val(),
                EndDate:$("#EndDate").val()
            };
            $.ajax({
                type: "get",
                dataType: "text",
                url: "@Url.Content("~/DatFileInterfaceReport/_GetOrderDatInfo/")",
                cache: false,
                data: data,
                success: function (data, textStatus) {
                    var tabStrip = $("#divOrderDatInfo");
                    $(tabStrip).html(data);
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    var errorMessages = "<li>" + XMLHttpRequest.responseText + "</li>";
                    $("#errorsul").html(errorMessages);
                    $("#successesul").html('');
                    var tabStrip = $("#divOrderDatInfo");
                    $(tabStrip).html("");
                }
            });
        }

       
    </script>
    <text>
        <style>
            td
            {
                border:border:1px solid #999999;
                }
        </style>
    </text>
    @using (Html.BeginForm())
    {   
