    Layout = "~/Views/Shared/_Main.cshtml";

}
<script type="text/javascript">
    function refresh() {
        parent.parent.Right.refresh();
    }
</script>
<script src="@Url.Content("~/Scripts/jquery-1.4.4.js")" type="text/javascript"></script>
<div style="float: left; position: absolute; top: 0px; left: 0px; z-index: -1; width: 100%;
    border-bottom-style: solid; border-bottom-color: #cccccc; border-bottom-width: 1px;
    background-color: White; height: 50px;">
    <div style="float: left; position: absolute; top: 0px; left: 0px; z-index: 2; width: 215px;
    height: 50px; background:url(@Url.Content("~/Content/Images/sih-logo.png"))">
    </div>
    <div style="float: left; position: absolute; top: 0px; left: 215px; z-index: 1; width: 9px;
    height: 45px; background:url(@Url.Content("~/Content/Images/Line.gif"))">
    </div>
    <div style="float: left; position: relative; left: 230px; z-index: 2; top: 16px;
        width: 500px; vertical-align: middle; height: 50px; color: #000000; font-size: 13px;">
        <b>物流执行系统 SIH-LES</b>
