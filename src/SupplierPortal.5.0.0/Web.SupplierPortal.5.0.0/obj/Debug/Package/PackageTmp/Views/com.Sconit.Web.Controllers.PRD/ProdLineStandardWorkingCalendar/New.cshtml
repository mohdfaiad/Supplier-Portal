@model com.Sconit.Entity.PRD.StandardWorkingCalendar
@{
    Html.RenderAction("_SiteMapPath", "Common", new { MenuContent = "Url_ProdLineStandardWorkingCalendar_View" });
}
@using (Html.BeginForm())
{
    <fieldset>
        <legend>@Resources.PRD.StandardWorkingCalendar.StandardWorkingCalendar_New_Title
        </legend>
        <div class="editor">
            <div class="editor-label-2">
                @Html.LabelFor(model => model.ProdLine)
            </div>
            <div class="editor-field-2">
                @{
    Html.RenderAction("_FlowComboBox", "Common", new
    {
        controlName = "ProdLine",
        type = (int)com.Sconit.CodeMaster.OrderType.Production,
        selectedValue = Model != null ? Model.ProdLine : string.Empty
    });
                }
                @Html.ValidationMessageFor(model => model.Region)
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.Shift)
            </div>
            <div class="editor-field-2">
                @{
    Html.RenderAction("_ShiftMasterDropDownList", "Common", new
                                                                {
                                                                    controlName = "Shift",
                                                                    includeBlankOption = true,
                                                                    selectedValue = Model != null ? Model.Shift : string.Empty
                                                                });
                }
                @Html.ValidationMessageFor(model => model.Shift)
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.DayOfWeek)
            </div>
            <div class="editor-field-2">
                @{
    Html.RenderAction("_CodeMasterDropDownList", "Common", new
    {
        code = com.Sconit.CodeMaster.CodeMaster.DayOfWeek,
        controlName = "DayOfWeek",
        selectedValue = Model != null ? (int)Model.DayOfWeek : 1
    });
                }
                @Html.ValidationMessageFor(model => model.DayOfWeek)
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.Type)
            </div>
            <div class="editor-field-2">
                @{
    Html.RenderAction("_CodeMasterDropDownList", "Common", new
                                                               {
                                                                   code = com.Sconit.CodeMaster.CodeMaster.WorkingCalendarType,
                                                                   controlName = "Type",
                                                                   selectedValue = Model != null ? (int)Model.Type : 0
                                                               });
                }
                @Html.ValidationMessageFor(model => model.Type)
            </div>
        </div>
        <div class="editor-footer">
            <button type="submit" id="btnNew">
                @Resources.Global.Button_New</button>
            <button type="button" id="btnBack" onclick="location.href='@Url.Content("~/ProdLineStandardWorkingCalendar/List")'">
                @Resources.Global.Button_Back</button>
        </div>
    </fieldset>
}