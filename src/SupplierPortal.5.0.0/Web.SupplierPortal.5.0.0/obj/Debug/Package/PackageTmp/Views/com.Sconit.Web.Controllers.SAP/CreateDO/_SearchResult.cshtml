@using com.Sconit.Entity.SAP.TRANS;
@model IEnumerable<com.Sconit.Entity.SAP.ORD.CreateDO>
<script type="text/javascript">
    $(function () {
        $("#checkAll").click(function () {
            $('input[name="checkedRecords"]').attr("checked", this.checked);
            $("#btnReCreateDO").attr("style", this.checked ? "display:inline" : "display:none");
        });
    });

    function showButtons() {
        var $checkRecords = $("input[name='checkedRecords']");
        var showButton = false;
        for (var i = 0; i < $checkRecords.length; i++) {
            if ($checkRecords[i].checked) {
                showButton = true;
                break;
            }
        }
        $("#checkAll").attr("checked", $checkRecords.length == $("input[name='checkedRecords']:checked").length ? true : false);
        $("#btnReCreateDO").attr("style", showButton ? "display:inline" : "display:none");
    }
</script>
<fieldset>
    @(Html.Telerik().Grid(Model)
        .Name("CreateDOGrid")
        .DataKeys(keys =>
        {
            keys.Add(p => p.Id);
        })
        .Columns(columns =>
        {
            columns.Bound(o => o.DoNo)
                .ClientTemplate("<input type='checkbox' id='checkedRecords' name='checkedRecords' value='<#=DoNo #>'   onClick='showButtons()' />")
                .HeaderTemplate("<input type='checkbox' id='checkAll' name='checkAll' />")
                .Width(36).HtmlAttributes(new { style = "text-align:center" });
            columns.Bound(o => o.DoNo);
            columns.Bound(o => o.DoLine);
            columns.Bound(o => o.Plant);
            columns.Bound(o => o.LocationFrom);
            columns.Bound(o => o.LocationTo);
            columns.Bound(o => o.Item);
            columns.Bound(o => o.Uom);
            columns.Bound(o => o.Qty);
            columns.Bound(o => o.WindowTime);
            columns.Bound(o => o.OpReference);
            columns.Bound(o => o.StatusDesc);
            columns.Bound(o => o.ErrorCount);
            columns.Bound(o => o.ErrorMessage);
            columns.Bound(o => o.SAPCreateDate);
            columns.Bound(o => o.CreateDate);
            columns.Bound(o => o.CreateUser);
            columns.Bound(o => o.OrderNo);
            columns.Bound(o => o.Status).Hidden();
        })
        .Scrollable(c => c.Enabled(false))
        .EnableCustomBinding(true)
        .DataBinding(dataBinding => dataBinding.Ajax().Select("_AjaxList", "CreateDO"))
        .ClientEvents(events => events.OnDataBinding("CreateDOGrid_OnDataBinding").OnRowDataBound("CreateDOGrid_OnRowDataBound").OnComplete("TelerikGridView_OnComplete"))
        .Pageable(settings =>
        {
            settings.Total(ViewBag.Total == null ? 0 : ViewBag.Total);
            settings.PageSize(ViewBag.PageSize);
        })
        .Sortable()
        .Resizable(resizing => resizing.Columns(true))
    )
    <script type="text/javascript">
        function CreateDOGrid_OnDataBinding(e) {
            i = 0;
            e.data = {
                DoNo: $('#DoNo').val(),
                OrderNo: $('#OrderNo').val(),
                LocationFrom: $('#LocationFrom').val(),
                LocationTo: $('#LocationTo').val(),
                Item: $('#Item').val(),
                Status: $('#Status').val(),
                CreateDateFrom: $('#CreateDateFrom').val(),
                CreateDateTo: $('#CreateDateTo').val()
            };
        }

        var i = 0;
        var doNo = "";
        function CreateDOGrid_OnRowDataBound(e) {
            if (i != 0) {
                return;
            }
            var rows = $("tbody").children("tr:not(.t-no-data)");
            for (var rowIndex = 0; rowIndex < rows.length; rowIndex++) {
                var row = $(rows[rowIndex]);
                var rowDoNo = row.children().eq(1).text();
                var status = row.children().eq(18).text();
                var errorCount = row.children().eq(12).text();
                if (status == "1" || rowDoNo == doNo) {
                    row.children().eq(0).children().hide();
                }
                doNo = rowDoNo;
            }
            i = rows.length;
        }

    
    </script>
</fieldset>
