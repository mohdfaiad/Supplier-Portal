@using com.Sconit.Web.Models.SearchModels.CUST
<fieldset>
    @using (Html.BeginForm("List", "CreateOrderCode"))
    {   
        <div class="search">
            <div class="search-label">
                <label for="FailCode_Code">
                    @Resources.CUST.FailCode.CreateOrderCode_Code
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("Code", TempData["CreateOrderSearchModel"] != null ? ((CreateOrderSearchModel)TempData["CreateOrderSearchModel"]).Code : string.Empty)
            </div>
            <div class="search-label">
                <label for="FailCode_Code">
                    @Resources.CUST.FailCode.CreateOrderCode_Description
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("Description", TempData["CreateOrderSearchModel"] != null ? ((CreateOrderSearchModel)TempData["CreateOrderSearchModel"]).Description : string.Empty)
            </div>
           
        </div>
        <div class="search-footer">
            @Html.Hidden("isFromList", true)
            <button type="submit" id="btnSearch">
                @Resources.Global.Button_Search</button>
        </div>

    }
</fieldset>
