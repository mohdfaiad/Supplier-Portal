@model com.Sconit.Entity.CUST.VehicleInFactoryMaster
@{
    Html.RenderAction("_SiteMapPath", "Common", new { MenuContent = "Url_VehicleInFactory_New" });
}
<script type="text/javascript">
    $(function () {
        $("#tbIpNo").keydown(function () {
            if (event.keyCode == 13) {
                var data = {
                    "IpNo": $(this).val()
                };
                $(this).val("");
                $.ajax({
                    type: "post",
                    dataType: "json",
                    data: data,
                    url: "@Url.Content("~/VehicleInFactory/IpNoScan/")",
                    cache: false,
                    success: function (data, textStatus) {
                        DisplayJsonMessages(data);
                        $.ajax({
                            type: "get",
                            dataType: "html",
                            url: "@Url.Content("~/VehicleInFactory/_VehicleInFactoryDetailList/")",
                            cache: false,
                            success: function (data, textStatus) {
                                var $tGrid = $("#divVehicleInFactoryDetailList");
                                $($tGrid).html(data);
                                $($tGrid).show();
                            }
                        });
                    },
                    error: function (XMLHttpRequest, textStatus, errorThrown) {
                        DisplayTextMessages(XMLHttpRequest.responseText);
                    }
                });
            }
        });
    });

    function onCreate() {
        $.ajax({
            type: "post",
            dataType: "json",
            url: "@Url.Content("~/VehicleInFactory/CreateVehicleInFactory/")",
            data: { "vehicleNo": $("#VehicleNo").val() },
            success: function (data, ordermstr) {
                DisplayJsonMessages(data);
                if (data != "") {
                    var orderData = {
                        "orderNo": data.Data.OrderNo
                    };
                    $.ajax({
                        type: "get",
                        dataType: "html",
                        url: "@Url.Content("~/VehicleInFactory/Edit/")",
                        data: orderData,
                        cache: false,
                        success: function (data, textStatus) {
                            var $tGrid = $("#content");
                            $($tGrid).html(data);
                        }
                    });
                }
            },
            error: function (XMLHttpRequest, textStatus, errorThrown) {
                DisplayTextMessages(XMLHttpRequest.responseText);
            }
        });
    }
</script>
@using (Html.BeginForm())
{
    <fieldset>
        <div class="editor">
            <div class="editor-label-2">
                <label>
                    @Resources.CUST.VehicleInFactoryDetail.VehicleInFactoryDetail_ScanIpNo
                </label>
            </div>
            <div class="editor-field-2">
                @Html.TextBox("tbIpNo", null)
            </div>
            <div class="editor-label-2">
                @Html.LabelFor(model => model.VehicleNo)
            </div>
            <div class="editor-field-2">
                @Html.EditorFor(model => model.VehicleNo)
            </div>
        </div>
        <div class="editor-footer">
            <button type="button" id="btnNew" onclick="onCreate()">
                @Resources.Global.Button_New</button>
        </div>
    </fieldset>
   
    <div id="divVehicleInFactoryDetailList" style="display: none;">
    </div>
   
}
