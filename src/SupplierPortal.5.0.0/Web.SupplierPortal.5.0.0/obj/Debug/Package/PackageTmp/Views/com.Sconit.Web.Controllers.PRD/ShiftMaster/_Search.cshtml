@using com.Sconit.Web.Models.SearchModels.PRD
<fieldset>
    @using (Html.BeginForm("List", "ShiftMaster"))
    {   
        <div class="search">
            <div class="search-label">
                <label for="ShiftMaster_Code">
                    @Resources.PRD.ShiftMaster.ShiftMaster_Code
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("Code", TempData["ShiftMasterSearchModel"] != null ? ((ShiftMasterSearchModel)TempData["ShiftMasterSearchModel"]).Code : string.Empty)
            </div>
            <div class="search-label">
                <label for="ShiftMaster_Name">
                    @Resources.PRD.ShiftMaster.ShiftMaster_Name
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("Name", TempData["ShiftMasterSearchModel"] != null ? ((ShiftMasterSearchModel)TempData["ShiftMasterSearchModel"]).Name : string.Empty)
            </div>
        </div>
        <div class="search-footer">
            @Html.Hidden("isFromList", true)
            @Html.Button(Resources.Global.Button_Search, "Url_ShiftMaster_View", new Dictionary<string, string>()
	{
	    {"type", "submit"},
	    {"id", "btnSearch"}
	})
            @Html.Button(Resources.Global.Button_New, "Url_ShiftMaster_Edit", new Dictionary<string, string>()
	{
	    {"type", "button"},
	    {"id", "btnNew"},
        {"onclick","location.href='"+@Url.Content("~/ShiftMaster/New")+"'"}
	})
        </div>

    }
</fieldset>
