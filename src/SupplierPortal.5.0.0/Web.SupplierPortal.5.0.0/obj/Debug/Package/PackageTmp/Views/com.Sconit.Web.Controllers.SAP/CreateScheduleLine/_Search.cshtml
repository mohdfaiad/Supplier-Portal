@using System.Data;
@using com.Sconit.Web.Models.SearchModels.SI
<fieldset>
    @using (Html.BeginForm("List", "CreateScheduleLine"))
    {   
        <div class="search">
            <div class="search-label">
                <label for="FRBNR">
                    @Resources.SI.CRSL.CRSL_FRBNR
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("FRBNR", TempData["SearchModel"] != null ? ((SearchModel)TempData["SearchModel"]).FRBNR : string.Empty)
            </div>
            <div class="search-label">
                <label for="LIFNR">
                    @Resources.SI.CRSL.CRSL_LIFNR
                </label>
            </div>
            <div class="search-field">
                @{
                    Html.RenderAction("_SupplierComboBox", "Common",
                    new
                    {
                        controlName = "LIFNR",
                        selectedValue = TempData["SearchModel"] != null ? ((SearchModel)TempData["SearchModel"]).LIFNR : string.Empty
                    });
                }
            </div>
            <div class="search-label">
                <label for="MATNR">
                    @Resources.SI.CRSL.CRSL_MATNR
                </label>
            </div>
            <div class="search-field">
                @{
                    Html.RenderAction("_ItemComboBox", "Common",
                    new
                    {
                        controlName = "MATNR",
                        selectedValue = TempData["SearchModel"] != null ? ((SearchModel)TempData["SearchModel"]).MATNR : string.Empty
                    });
                }
            </div>
            <div class="search-label">
                <label>
                      @Resources.SI.CRSL.CRSL_Status
                </label>
            </div>
            <div class="search-field">
                @{
                    Html.RenderAction("_StatusDropDownList", "Common",
                    new
                    {
                        controlName = "Status",
                        selectedValue = TempData["SearchModel"] != null ? ((SearchModel)TempData["SearchModel"]).Status : 0
                    });
                }                
            </div>

            <div class="search-label">
                <label for="DateFrom">
                     @Resources.SI.CRSL.CRSL_DateFrom
                </label>
            </div>
            <div class="search-field">
                @(Html.Telerik().DateTimePicker().Name("StartDate").Format("yyyy-MM-dd HH:mm").Value(DateTime.Now.AddDays(-1)))
            </div>
            <div class="search-label">
                <label for="OrderMaster_DateTo">
                    @Resources.SI.CRSL.CRSL_DateTo
                </label>
            </div>
            <div class="search-field">
                @(Html.Telerik().DateTimePicker().Name("EndDate").Format("yyyy-MM-dd HH:mm").Value(DateTime.Now))
            </div>
        </div>
        <div class="search-footer">
            @Html.Hidden("isFromList", true)
            <button type="submit" id="btnSearch">
                @Resources.Global.Button_Search</button>
        </div>
    }
</fieldset>
