@using com.Sconit.Web.Models.SearchModels.PRD
<fieldset>
    @using (Html.BeginForm("WorkList", "ProdLineSpecialTime"))
    {
        <div class="search">
            <div class="search-label">
                <label for="SpecialTime_ProdLine">
                    @Resources.PRD.SpecialTime.SpecialTime_ProdLine
                </label>
            </div>
            <div class="search-field">
                @{
        Html.RenderAction("_FlowComboBox", "Common",
                          new
                              {
                                  controlName = "Region",
                                  controlId = "SpecialTimeRegion",
                                  type = (int)com.Sconit.CodeMaster.OrderType.Production,
                                  selectedValue = TempData["SpecialTimeSearchModel"] != null ? ((SpecialTimeSearchModel)TempData["SpecialTimeSearchModel"]).Region : string.Empty
                              });
                }
            </div>
            <div class="search-label">
                <label for="Item_IsActive">
                </label>
            </div>
            <div class="search-field">
            </div>
            <div class="search-label">
                <label for="Item_IsActive">
                    @Resources.PRD.SpecialTime.SpecialTime_StartTime
                </label>
            </div>
            <div class="search-field">
                @(Html.Telerik().DatePicker().Format(com.Sconit.Entity.BusinessConstants.SHORT_DATE_FORMAT).Name("StartTime").HtmlAttributes(new { style = "margin-bottom: 1.3em;width:172px", }))
            </div>
            <div class="search-label">
                <label for="Item_IsActive">
                    @Resources.PRD.SpecialTime.SpecialTime_EndTime
                </label>
            </div>
            <div class="search-field">
                @(Html.Telerik().DatePicker().Format(com.Sconit.Entity.BusinessConstants.SHORT_DATE_FORMAT).Name("EndTime").HtmlAttributes(new { style = "margin-bottom: 1.3em;width:172px", }))
            </div>
        </div>
        <div class="search-footer">
            @Html.Hidden("isFromList", true)
            @Html.Button(Resources.Global.Button_Search, "Url_ProdLineSpecialTime_WorkView", new Dictionary<string, string>()
                                                                                 {
                                                                                     {"type", "submit"},
                                                                                     {"id", "btnSearch"}
                                                                                 })
            @Html.Button(Resources.Global.Button_New, "Url_ProdLineSpecialTime_WorkEdit", new Dictionary<string, string>()
                                                                              {
                                                                                  {"type", "button"},
                                                                                  {"id", "btnNew"},
                                                                                  {"onclick", "location.href='" + @Url.Content("~/ProdLineSpecialTime/WorkNew") + "'"}
                                                                              })
        </div>
    }
</fieldset>
