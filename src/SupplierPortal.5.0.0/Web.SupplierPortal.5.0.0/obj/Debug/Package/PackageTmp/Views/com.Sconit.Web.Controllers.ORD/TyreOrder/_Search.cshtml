@using com.Sconit.Web.Models.SearchModels.ORD
<fieldset>
    @using (Html.BeginForm("List", "TyreOrder"))
    {   
        <div class="search">
        <div class="editor-label-2">
                <label for="">
                     @Resources.ORD.OrderMaster.OrderMaster_Flow_Production
                </label>
            </div>
            <div class="editor-field-2">
                @{
        Html.RenderAction("_FlowComboBox", "Common",
                       new
                       {
                           controlName = "ProdLine",
                           type = (int)com.Sconit.CodeMaster.OrderType.Production,
                           isVanOrder = true,
                           selectedValue = TempData["TyreOrderSearchModel"] != null ? ((TyreOrderSearchModel)TempData["TyreOrderSearchModel"]).ProdLine : string.Empty
                       });
                }
            </div>
             <div class="search-label">
                <label for="">
                     @Resources.ORD.OrderMaster.OrderMaster_Flow
                </label>
            </div>
            <div class="search-field">
                @{
        Html.RenderAction("_FlowComboBox", "Common",
                new
                {
                    controlName = "Flow",
                    type = (int)com.Sconit.CodeMaster.OrderType.Transfer,
                    selectedValue = TempData["TyreOrderSearchModel"] != null ? ((TyreOrderSearchModel)TempData["TyreOrderSearchModel"]).Flow : string.Empty
                });
                }
            </div>
            <div class="search-label">
                <label for="OrderMaster_DateFrom">
                    结算日期 从
                </label>
            </div>
            <div class="search-field">
                @(Html.Telerik().DateTimePicker()
            .Format(com.Sconit.Entity.BusinessConstants.LONG_DATE_FORMAT)
            .Name("CreateDateFrom")
 .Value(TempData["TyreOrderSearchModel"] != null ? ((TyreOrderSearchModel)TempData["TyreOrderSearchModel"]).CreateDateFrom : null)
                .HtmlAttributes(new { style = "margin-bottom: 1.3em;width:200px" }))
            </div>
            <div class="search-label">
                <label for="OrderMaster_DateTo">
                    至
                </label>
            </div>
            <div class="search-field">
                @(Html.Telerik().DateTimePicker()
        .Format(com.Sconit.Entity.BusinessConstants.LONG_DATE_FORMAT)
            .Name("CreateDateTo")
         .Value(TempData["TyreOrderSearchModel"] != null ? ((TyreOrderSearchModel)TempData["TyreOrderSearchModel"]).CreateDateTo : null)
                .HtmlAttributes(new { style = "margin-bottom: 1.3em;width:200px" }))
            </div>
            
      
        </div>
        <div class="search-footer">
            @Html.Hidden("isFromList", true)
            <button type="submit" id="btnSearch">
                @Resources.Global.Button_Search</button>
           @* <button type="button" id="btnExport" onclick="ExportClick()">
                @Resources.Global.Button_Export</button>*@
                
        </div>

    }
</fieldset>
<script type="text/javascript">

    function ExportClick() {
        location.href = "@Url.Content("~/LocationDetailPref/ExportXls/?LocationCode=")" + $('#LocationCode').val() + "&ItemCode=" + $('#ItemCode').val();
    }
</script>
