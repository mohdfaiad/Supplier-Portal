@model IEnumerable<com.Sconit.Entity.LOG.SnapshotFlowDet4LeanEngine>
<fieldset>
    @(Html.Telerik().Grid(Model)
                        .Name("SnapshotFlowDet4LeanEngineGrid")
        .DataKeys(keys =>
        {
            keys.Add(p => p.Id);
        })
        .Columns(columns =>
        {
            //columns.Bound(o => o.Flow);
            columns.Bound(o => o.Item);
            columns.Bound(o => o.ReferenceItemCode);
            columns.Bound(o => o.ItemDesc);
            columns.Bound(o => o.LocationFrom);
            columns.Bound(o => o.LocationTo);
            //columns.Bound(o => o.Lvl);
            //columns.Bound(o => o.OrderNo);
            columns.Bound(o => o.ErrorId);
            columns.Bound(o => o.Message);
            columns.Bound(o => o.BatchNo);
            columns.Bound(o => o.CreateDate);
        })
                .Scrollable(c => c.Enabled(false))
                                .DataBinding(dataBinding => dataBinding.Ajax().Select("_AjaxList", "SnapshotFlowDet4LeanEngine"))
                                .ClientEvents(events => events.OnDataBinding("SnapshotFlowDet4LeanEngineGrid_OnDataBinding"))
                .Pageable(settings =>
                {
                    settings.Total(ViewBag.Total != null ? ViewBag.Total : 0);
                    settings.PageSize(ViewBag.PageSize);
                })
                .EnableCustomBinding(true)
                .Sortable()
                .Resizable(resizing => resizing.Columns(true))
            )
    <script type="text/javascript">
        function SnapshotFlowDet4LeanEngineGrid_OnDataBinding(e) {
            e.data = {
                ErrorId: $('#ErrorId').val(),
                Item: $('#Item').val(),
                LocationFrom: $('#LocationFrom').val(),
                LocationTo: $('#LocationTo').val(),
//                OrderNo: $('#OrderNo').val(),
//                CreateDateFrom: $('#CreateDateFrom').val(),
//                CreateDateTo: $('#CreateDateTo').val()
            };
        }
    </script>
</fieldset>
