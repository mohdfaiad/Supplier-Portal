<script type="text/javascript">
    function Item_Change() {
        $("#ReferenceItemCode").value = "";
//        $("#Uom").value = "";
        $("#Container").value = "";
        $("#ContainerDescription").value = "";
        $("#MinUnitCount").value = "";
        var uomData = {
            controlName: "Uom",
            includeBlankOption: false,
            enable: false,
            selectedValue: ""
        };
        $.ajax({
            type: "post",
            dataType: "html",
            url: "@Url.Content("~/Common/_UomDropDownList/")",
            data: uomData,
            cache: false,
            success: function (data) {
                $("#UomDiv").html(data);
            }
        });
        var combobox = $(this).data("tComboBox");
        if (combobox.selectedIndex == undefined || combobox.selectedIndex == -1) {
            combobox.value("");
            combobox.reload();
        } else {
            var data = {
                item: $("#Item").val()
            };
            $.ajax({
                type: "post",
                dataType: "json",
                url: "@Url.Content("~/ProcurementFlow/GetRefItemCode/")",
                data: data,
                cache: false,
                success: function (data) {
                    $("#ReferenceItemCode").val(data.ReferenceCode);
                    $("#Uom").val(data.Uom);
                    $("#Container").val(data.Container);
                    $("#ContainerDescription").val(data.ContainerDescription);
                    $("#MinUnitCount").val(data.MinUnitCount);

                    var uomData = {
                        controlName: "Uom",
                        includeBlankOption: false,
                        enable: false,
                        selectedValue: data.Uom
                    };
                    $.ajax({
                        type: "post",
                        dataType: "html",
                        url: "@Url.Content("~/Common/_UomDropDownList/")",
                        data: uomData,
                        cache: false,
                        success: function (data) {
                            $("#UomDiv").html(data);
                        }
                    });
                }
            });
        }
    }


   
</script>
