@using com.Sconit.Web.Models.SearchModels.MD
<fieldset>
    @using (Html.BeginForm("List", "WorkCenter"))
    {   
        <div class="search">
            <div class="search-label">
                <label for="WorkCenter_Code">
                    @Resources.MD.WorkCenter.WorkCenter_Code
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("SearchCode", TempData["WorkCenterSearchModel"] != null ? ((WorkCenterSearchModel)TempData["WorkCenterSearchModel"]).SearchCode : string.Empty)
            </div>
            <div class="search-label">
                <label for="WorkCenter_Location">
                    @Resources.MD.WorkCenter.WorkCenter_Location
                </label>
            </div>
            <div class="search-field">
                @{
        Html.RenderAction("_LocationComboBox", "Common", new
        {
            controlName = "SearchLocation",
            selectedValue = TempData["WorkCenterSearchModel"] != null ? ((WorkCenterSearchModel)TempData["WorkCenterSearchModel"]).SearchLocation : null
        });
                }
            </div>
        </div>
        <div class="search-footer">
            @Html.Hidden("isFromList", true)
            <button type="submit" id="btnSearch">
                @Resources.Global.Button_Search</button>
            @Html.Button(Resources.Global.Button_New, "Url_WorkCenter_View", new Dictionary<string, string>()
	{
	    {"type", "button"},
	    {"id", "btnNew"},
        {"onclick","location.href='"+@Url.Content("~/WorkCenter/New")+"'"}
	})
        </div>

    }
</fieldset>
