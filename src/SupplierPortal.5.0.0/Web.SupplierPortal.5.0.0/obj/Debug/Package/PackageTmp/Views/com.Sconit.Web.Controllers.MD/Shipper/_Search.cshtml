@using com.Sconit.Web.Models.SearchModels.MD
<fieldset>
    @using (Html.BeginForm("List", "Shipper"))
    {   
        <div class="search">
            <div class="search-label">
                <label for="Shipper_Code">
                    @Resources.MD.Shipper.Shipper_Code
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("SearchCode", TempData["ShipperSearchModel"] != null ? ((ShipperSearchModel)TempData["ShipperSearchModel"]).SearchCode : string.Empty)
            </div>
            <div class="search-label">
                <label for="Shipper_Description">
                    @Resources.MD.Shipper.Shipper_Description
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("SearchDescription", TempData["ShipperSearchModel"] != null ? ((ShipperSearchModel)TempData["ShipperSearchModel"]).SearchDescription : string.Empty)
            </div>
            <div class="search-label">
                <label for="PickRule_Location">
                    @Resources.MD.Shipper.Shipper_Location
                </label>
            </div>
            <div class="search-field">
                @{
        Html.RenderAction("_LocationComboBox", "Common", new
        {
            controlName = "SearchLocation",
            selectedValue = TempData["ShipperSearchModel"] != null ? ((ShipperSearchModel)TempData["ShipperSearchModel"]).SearchLocation : null
        });
                }
            </div>
            <div class="search-label">
                <label for="Shipper_Description">
                    @Resources.MD.Shipper.Shipper_Address
                </label>
            </div>
            <div class="search-field">
                @Html.TextBox("SearchAddress", TempData["ShipperSearchModel"] != null ? ((ShipperSearchModel)TempData["ShipperSearchModel"]).SearchAddress : string.Empty)
            </div>
        </div>
        <div class="search-footer">
            @Html.Hidden("isFromList", true)
            <button type="submit" id="btnSearch">
                @Resources.Global.Button_Search</button>
            @Html.Button(Resources.Global.Button_New, "Url_Shipper_View", new Dictionary<string, string>()
	{
	    {"type", "button"},
	    {"id", "btnNew"},
        {"onclick","location.href='"+@Url.Content("~/Shipper/New")+"'"}
	})
        </div>

    }
</fieldset>
