@model IEnumerable<com.Sconit.Entity.SCM.FlowDetail>
<fieldset>
    @(Html.Telerik().Grid(Model)
        .Name("ItemFlowGrid")
        .DataKeys(keys =>
        {
            keys.Add(p => p.Id);
        })
        .Columns(columns =>
        {
            columns.Bound(o => o.Type).Sortable(false);
            columns.Bound(o => o.Flow);
            columns.Bound(o => o.Item);
            columns.Bound(o => o.ItemDescription);
            columns.Bound(o => o.ReferenceItemCode);
            columns.Bound(o => o.SingleQty);
            columns.Bound(o => o.SumQty);
            columns.Bound(o => o.BESKZ);
            columns.Bound(o => o.SOBSL);
            columns.Bound(o => o.EXTWG);
            columns.Bound(o => o.FlowStrategy).Sortable(false);
            columns.Bound(o => o.LocationFrom);
            columns.Bound(o => o.LocationTo);
            columns.Bound(o => o.Routing);
        })

        //.Scrollable(c => c.Enabled(false))
        .EnableCustomBinding(true)
        .DataBinding(dataBinding => dataBinding.Ajax().Select("_AjaxTList", "ItemFlow"))
                                        .ClientEvents(events => events.OnDataBinding("ItemFlowGrid_OnDataBinding"))

        .Pageable(settings =>
        {
            settings.Total(ViewBag.Total != null ? ViewBag.Total : 0);
            settings.PageSize(ViewBag.PageSize);
        })
        .Sortable()
        .Resizable(resizing => resizing.Columns(true))
    )
    <script type="text/javascript">
