        </div>
        <div class="editor-footer">
            @{
                if (Model.Status == com.Sconit.CodeMaster.MiscOrderStatus.Create)
                {   
                 @*   @Html.Button(Resources.Global.Button_Save, "Url_InspectionOrder_ReturnNew", new Dictionary<string, string>()
	            {
	                {"type", "submit"},
	                {"id", "btnSave"},
                    {"needconfirm","true"}
	            })*@

