    //    }
    function Export(e) {
        $("#huId").val($("#HuId").val());
        $("#hiddenForm").submit();
    }

    function Print(e) {
        var data = {
            "huId": $("#HuId").val()
        };
        $.ajax({
            type: "post",
            dataType: "text",
            url: "@Url.Content("~/Hu/Print/")",
            data: data,
            success: function (data, textStatus) {
                if (data != "") {
                    PrintOrder(data);
                }
            },
            error: function (XMLHttpRequest, textStatus, errorThrown) {
                DisplayTextMessages(XMLHttpRequest.responseText);
            }
        });
    }
</script>