@model IEnumerable<com.Sconit.Entity.SCM.OpReferenceBalance>
<fieldset>
    @(Html.Telerik().Grid(Model)
        .Name("OpReferenceBalanceMapGrid")
        .DataKeys(keys =>
        {
            keys.Add(p => p.Id);
        })
        .Columns(columns =>
        {
            columns.Bound(o => o.Item);
            columns.Bound(o => o.ReferenceItemCode);
            columns.Bound(o => o.ItemDescription);
            columns.Bound(o => o.IsOpRefMap).ClientTemplate("<input type='checkbox' disabled='disabled' name='IsOpRefMap' <#= IsOpRefMap? checked='checked' : '' #> />");
            columns.Bound(o => o.OpReference);
            columns.Bound(o => o.Qty);
            columns.Bound(o => o.StockQty);
        })

        .Scrollable(c => c.Enabled(false))
        .EnableCustomBinding(true)
                .DataBinding(dataBinding => dataBinding.Ajax().Select("_AjaxMapList", "OpReferenceBalance"))
                .ClientEvents(events => events.OnDataBinding("OpReferenceBalanceGrid_OnDataBinding"))
        .Pageable(settings =>
        {
            settings.Total(ViewBag.Total != null ? ViewBag.Total : 0);
            settings.PageSize(ViewBag.PageSize);
        })
        .Sortable()
        .Resizable(resizing => resizing.Columns(true))
    )
     <script type="text/javascript">
         function OpReferenceBalanceGrid_OnDataBinding(e) {
             e.data = {
                 ItemCode: $('#ItemCode').val(),
                 OpReference: $('#OpReference').val()
             };
         } 
    </script>
</fieldset>
