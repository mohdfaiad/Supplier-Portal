@model IEnumerable<com.Sconit.Entity.KB.KanbanCard>
@{
    Layout = null;
}

<fieldset>
    @(Html.Telerik().Grid(Model)
        .Name("ScheduleDetail")
                        .Columns(columns => columns.LoadSettings((IEnumerable<GridColumnSettings>)ViewData["columns"]))
                .Scrollable(c => c.Enabled(false))
                                .DataBinding(dataBinding => dataBinding.Ajax().Select("_AjaxTurnoverRateList", "KanbanCard"))
                        .ClientEvents(events => events.OnDataBinding("KanbanGrid_OnDataBinding"))
                .Footer(false)
            )
    <script type="text/javascript">
        function KanbanGrid_OnDataBinding(e) {
            e.data = {
                Item: $('#Item').val(),
                CardNo: $('#CardNo').val(),
                BinTo: $('#BinTo').val(),
                OpRefSequence: $('#OpRefSequence').val(),
                StartDate: $('#StartDate').val(),
                EndDate: $('#EndDate').val()
            };
        } 
    </script>
</fieldset>
