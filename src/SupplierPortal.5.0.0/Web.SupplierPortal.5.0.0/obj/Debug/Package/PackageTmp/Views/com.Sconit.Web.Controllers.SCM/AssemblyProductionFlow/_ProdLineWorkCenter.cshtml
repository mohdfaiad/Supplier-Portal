@using com.Sconit.Web.Models.SearchModels.SCM
@model IEnumerable<com.Sconit.Entity.PRD.ProdLineWorkCenter>
   
   <script type="text/javascript">
       function onWorkCenterDataBinding(e) {
//       debugger
//        e.data = {
